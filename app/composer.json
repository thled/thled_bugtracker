{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "antishov/doctrine-extensions-bundle": "^1.4",
        "doctrine/annotations": "^1.8",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/doctrine-migrations-bundle": "^2.1",
        "doctrine/orm": "^2.7",
        "phpdocumentor/reflection-docblock": "^4.3",
        "ramsey/uuid-doctrine": "^1.6",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/asset": "5.0.*",
        "symfony/console": "5.0.*",
        "symfony/dotenv": "5.0.*",
        "symfony/expression-language": "5.0.*",
        "symfony/flex": "^1.6",
        "symfony/form": "5.0.*",
        "symfony/framework-bundle": "5.0.*",
        "symfony/http-client": "5.0.*",
        "symfony/intl": "5.0.*",
        "symfony/mailer": "5.0.*",
        "symfony/monolog-bundle": "^3.5",
        "symfony/notifier": "5.0.*",
        "symfony/process": "5.0.*",
        "symfony/property-access": "5.0.*",
        "symfony/property-info": "5.0.*",
        "symfony/security-bundle": "5.0.*",
        "symfony/serializer": "5.0.*",
        "symfony/string": "5.0.*",
        "symfony/translation": "5.0.*",
        "symfony/twig-bundle": "5.0.*",
        "symfony/validator": "5.0.*",
        "symfony/web-link": "5.0.*",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "5.0.*",
        "twig/extra-bundle": "^3.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "easycorp/easy-log-handler": "^1.0",
        "fzaninotto/faker": "^1.9",
        "jangregor/phpstan-prophecy": "^0.6",
        "liip/test-fixtures-bundle": "^1.6",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpstan/phpstan-symfony": "^0.12",
        "roave/security-advisories": "dev-master",
        "slevomat/coding-standard": "^6.2",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/browser-kit": "5.0.*",
        "symfony/css-selector": "5.0.*",
        "symfony/debug-bundle": "5.0.*",
        "symfony/maker-bundle": "^1.14",
        "symfony/phpunit-bridge": "5.0.*",
        "symfony/stopwatch": "5.0.*",
        "symfony/var-dumper": "5.0.*",
        "symfony/web-profiler-bundle": "5.0.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "bootstrap": [
            "cp .env.docker .env.local",
            "@composer install",
            "@php bin/console doctrine:migrations:migrate --no-interaction",
            "@php bin/console doctrine:fixtures:load --no-interaction",
            "@php bin/console cache:clear"
        ],
        "reset": [
            "@php bin/console doctrine:database:drop --force",
            "@php bin/console doctrine:database:create",
            "@php bin/console doctrine:migrations:migrate --no-interaction",
            "@php bin/console doctrine:fixtures:load --no-interaction",
            "@php bin/console cache:clear"
        ],
        "ci": [
            "@lint",
            "@tests",
            "@phpstan"
        ],
        "lint": "@php vendor/bin/phpcs -ws",
        "fix": "@php vendor/bin/phpcbf -wp",
        "analyse": [
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "tests": "@php vendor/bin/simple-phpunit",
        "unit": "@php vendor/bin/simple-phpunit --testsuit unit",
        "integration": "@php vendor/bin/simple-phpunit --testsuit integration",
        "functional": "@php vendor/bin/simple-phpunit --testsuit functional",
        "code-coverage": "@php vendor/bin/simple-phpunit --coverage-html coverage",
        "codecov": "@php vendor/bin/simple-phpunit --coverage-clover coverage/coverage.xml",
        "phpstan": [
            "@php bin/console cache:warmup --env=dev",
            "@php bin/console cache:warmup --env=test",
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpstan-src": "@php vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress",
        "phpstan-tests": "@php vendor/bin/phpstan analyse --configuration phpstan-tests.neon --no-progress"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.0.*"
        }
    }
}
