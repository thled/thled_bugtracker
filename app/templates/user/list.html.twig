{% extends 'main.html.twig' %}

{% block main_title %}
    {{ 'user.list.title'|trans }}
{% endblock %}

{% block main_lead %}
    {{ 'user.list.lead'|trans }}
{% endblock %}

{% block main_content %}
    <div class="table-responsive-lg">
        <table class="table table-hover">
            <caption>List of users</caption>
            <thead class="thead-light">
            <tr>
                <th scope="col">{{ 'user.list.table.username'|trans }}</th>
                <th scope="col">{{ 'user.list.table.roles'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                {# Link row: https://stackoverflow.com/a/57591579 #}
                <tr style="transform: rotate(0);">
                    <th scope="row">
                        <a href="{{ path('user_show', {'user': user.id}) }}" class="stretched-link">
                            {{ user.username }}
                        </a>
                    </th>
                    <td>{{ user.roles|join(' | ') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
