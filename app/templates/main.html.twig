{% extends 'base.html.twig' %}

{% block body %}
    <header class="sticky-top my-4">
        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <img
                        src="{{ asset('images/logo.svg') }}"
                        width="64"
                        height="64"
                        alt="THlEd BUGTRACKER Logo"
                >
                <span class="navbar-brand mb-0 h1">
                    {% trans %}website.title{% endtrans %}
                </span>

                <button
                        class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {% block header_content %}
                        {% include 'navigation/navbar.html.twig' %}
                    {% endblock %}
                </div>
            </nav>
        {% endblock %}
    </header>
    <main role="main">
        <div class="container-fluid">
            {% block main %}
                <div class="card">
                    <h2 class="card-header py-3">
                        {% block main_title %}
                            Title of the content!
                        {% endblock %}
                    </h2>
                    <div class="card-body">
                        <h5 class="card-title">
                            {% block main_lead %}
                                Leading text to the main content.
                            {% endblock %}
                        </h5>
                        <p class="card-text">
                            {% block main_content %}
                                {% include 'loremIpsum.html.twig' %}
                            {% endblock %}
                        </p>
                    </div>
                </div>
            {% endblock %}
        </div>
    </main>
    <footer class="footer">
        <div class="container-fluid">
            {% block footer %}
                <nav class="navbar navbar-expand-md">
                    {% block footer_content %}
                        {% include 'footer.html.twig' %}
                    {% endblock %}
                </nav>
            {% endblock %}
        </div>
    </footer>
{% endblock %}
